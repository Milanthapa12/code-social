generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  name String?
  username String @unique
  email String? @unique
  password String?
  avatar String?
  sessions Session[]
  posts Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

model Session {
  id String @id
  userId String
  expiresAt DateTime
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}


model Post {
  id String @id @default(cuid())
  content String @db.LongText
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("posts")
}